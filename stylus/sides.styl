.side
    display grid 
    grid-template-columns 1fr
    align-items center
    grid-template-rows 1fr
    justify-content right //center
    grid-column 1 / 2
    grid-row 1 / 2
    height 100%
    opacity 0
    position relative
    top 0
    transform rotateY(-180deg)
    transition all .5s
    width 100%
.side-content 
    align-self start
    display flex 
    align-items center
    flex-direction column
    grid-column 1 / 2
    grid-row 1 / 2
    height 100%
    padding-top 3rem
.toggle-side
    border-radius 50%
    color #fff
    display flex 
    align-items center
    justify-content center
    font-size 2.5rem
    font-weight 800
    grid-column 1 / 2
    grid-row 1 / 2
    height 2rem
    margin-left auto
    margin-right 8px
    padding-bottom 5px
    //position absolute
    //right 6px
    //top 50%
    //transform translate(0, -50%)
    width 2rem
    z-index 1
.front
    // background rgba(0,0,0,.2)
    background var(--beta)
.back 
    background rgba(0,0,0,.2)
    background var(--alpha)
.show-side 
    opacity 1
    order 2
    transform rotateY(-360deg)