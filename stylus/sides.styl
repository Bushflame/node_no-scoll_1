.side
    display flex 
    flex-direction column
    align-items center
    justify-content center
    grid-column 1 / 2
    grid-row 1 / 2
    height 100%
    opacity 0
    position relative
    top 0
    transform rotateY(-180deg)
    transition all .5s
    width 100%
.toggle-side
    background skyblue
    border-radius 50%
    color #fff
    display flex 
    align-items center
    justify-content center
    font-size 2.5rem
    font-weight 800
    height 2rem
    padding-bottom 5px
    position absolute
    right 6px
    top 50%
    transform translate(0, -50%)
    width 2rem
    z-index 100
.front
    background orange
    //order 1
.back 
    background purple
.show-side 
    opacity 1
    order 2
    transform rotateY(-360deg)